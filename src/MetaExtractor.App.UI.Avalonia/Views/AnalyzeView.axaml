<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:MetaExtractor.Core.ViewModels"
             xmlns:converters="using:MetaExtractor.App.UI.Avalonia.Converters"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="MetaExtractor.App.UI.Avalonia.Views.AnalyzeView"
             x:DataType="vm:AnalyzeViewModel">
  <UserControl.Resources>
    <converters:MatToBitmapConverter x:Key="MatToBitmapConverter"/>
  </UserControl.Resources>
  <Design.DataContext>
    <vm:AnalyzeViewModel/>
  </Design.DataContext>

  <Border Background="#1e1e1e" CornerRadius="10" Margin="5">
    <Grid Margin="20" RowDefinitions="*,Auto">
      <Grid Grid.Row="0" ColumnDefinitions="*,300">
        <!-- Video Preview -->
        <Border Grid.Column="0" 
                Background="#2d2d2d" 
                CornerRadius="10" 
                Margin="0,0,20,0">
          <Grid>
            <!-- Placeholder when no video -->
            <StackPanel HorizontalAlignment="Center" 
                        VerticalAlignment="Center"
                        IsVisible="{Binding VideoFrame, Converter={x:Static ObjectConverters.IsNull}}">
              <TextBlock Text="📹" FontSize="48" Foreground="#666666" HorizontalAlignment="Center"/>
              <TextBlock Text="No Video Source" 
                         FontSize="18" 
                         Foreground="#888888" 
                         HorizontalAlignment="Center"
                         Margin="0,10,0,0"/>
              <TextBlock Text="Click Start to begin face analysis" 
                         FontSize="12" 
                         Foreground="#666666" 
                         HorizontalAlignment="Center"
                         Margin="0,5,0,0"/>
            </StackPanel>
            
            <!-- Video Display -->
            <Image Source="{Binding VideoFrame, Converter={StaticResource MatToBitmapConverter}}" 
                   Stretch="Uniform"
                   IsVisible="{Binding VideoFrame, Converter={x:Static ObjectConverters.IsNotNull}}"/>
          </Grid>
        </Border>

        <!-- Analysis Panel -->
        <Border Grid.Column="1" 
                Background="#252525" 
                CornerRadius="10" 
                Padding="20">
          <ScrollViewer>
            <StackPanel Spacing="20">
              <!-- Real-time Status -->
              <StackPanel>
                <TextBlock Text="🔴 Analysis Status" 
                           FontSize="16" 
                           FontWeight="SemiBold" 
                           Foreground="White" 
                           Margin="0,0,0,10"/>
                <TextBlock Text="Ready to start" 
                           FontSize="12" 
                           Foreground="#888888"/>
              </StackPanel>

              <!-- Landmarks Section -->
              <StackPanel>
                <TextBlock Text="📍 Face Landmarks" 
                           FontSize="14" 
                           FontWeight="Bold" 
                           Foreground="White" 
                           Margin="0,0,0,8"/>
                <Border Background="#1e1e1e" 
                        CornerRadius="5" 
                        Padding="12">
                  <TextBlock Text="{Binding Landmarks}" 
                             Foreground="LightGray" 
                             TextWrapping="Wrap" 
                             FontSize="11"/>
                </Border>
              </StackPanel>

              <!-- Expressions Section -->
              <StackPanel>
                <TextBlock Text="😊 Facial Expressions" 
                           FontSize="14" 
                           FontWeight="Bold" 
                           Foreground="White" 
                           Margin="0,0,0,8"/>
                <Border Background="#1e1e1e" 
                        CornerRadius="5" 
                        Padding="12">
                  <TextBlock Text="{Binding Expressions}" 
                             Foreground="LightGray" 
                             TextWrapping="Wrap" 
                             FontSize="11"/>
                </Border>
              </StackPanel>

              <!-- Demographics Section -->
              <StackPanel>
                <TextBlock Text="👤 Demographics" 
                           FontSize="14" 
                           FontWeight="Bold" 
                           Foreground="White" 
                           Margin="0,0,0,8"/>
                <Border Background="#1e1e1e" 
                        CornerRadius="5" 
                        Padding="12">
                  <TextBlock Text="{Binding Demographics}" 
                             Foreground="LightGray" 
                             TextWrapping="Wrap" 
                             FontSize="11"/>
                </Border>
              </StackPanel>
            </StackPanel>
          </ScrollViewer>
        </Border>
      </Grid>

      <!-- Control Panel -->
      <Border Grid.Row="1" 
              Background="#2d2d2d" 
              CornerRadius="10" 
              Padding="20" 
              Margin="0,20,0,0">
        <Grid ColumnDefinitions="*,Auto">
          <StackPanel Grid.Column="0" 
                      Orientation="Horizontal" 
                      VerticalAlignment="Center" 
                      Spacing="15">
            <Button Content="▶️ Start Analysis" 
                    Command="{Binding StartAnalysisCommand}" 
                    Background="#28a745" 
                    Foreground="White" 
                    BorderThickness="0" 
                    CornerRadius="6"
                    Padding="15,8"
                    FontWeight="Medium"/>
            <Button Content="⏹️ Stop Analysis" 
                    Command="{Binding StopAnalysisCommand}" 
                    Background="#dc3545" 
                    Foreground="White" 
                    BorderThickness="0" 
                    CornerRadius="6"
                    Padding="15,8"
                    FontWeight="Medium"/>
          </StackPanel>
          
          <Button Grid.Column="1"
                  Content="💾 Save Results" 
                  Command="{Binding SaveResultsCommand}" 
                  Background="#007acc" 
                  Foreground="White" 
                  BorderThickness="0" 
                  CornerRadius="6"
                  Padding="15,8"
                  FontWeight="Medium"/>
        </Grid>
      </Border>
    </Grid>
  </Border>
</UserControl>
