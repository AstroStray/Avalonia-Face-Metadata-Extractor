<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:MetaExtractor.Core.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
        x:Class="MetaExtractor.App.UI.Avalonia.Views.ShellView"
        x:DataType="vm:ShellViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="MetaExtractor - Face Metadata Analysis"
        WindowStartupLocation="CenterScreen"
        MinWidth="1000" MinHeight="700"
        Background="#1e1e1e">

    <Grid ColumnDefinitions="220, *">
        <!-- Modern Sidebar -->
        <Border Grid.Column="0" Background="#252525" CornerRadius="0,10,10,0">
            <StackPanel Margin="15">
                <!-- Header -->
                <StackPanel Margin="0,10,0,30">
                    <TextBlock Text="MetaExtractor" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               Foreground="White" 
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Face Analysis Platform" 
                               FontSize="12" 
                               Foreground="#888888" 
                               HorizontalAlignment="Center"
                               Margin="0,5,0,0"/>
                </StackPanel>

                <!-- Navigation Menu -->
                <StackPanel Spacing="8">
                    <!-- Analyze Button -->
                    <Button Classes="nav-button"
                            Command="{Binding NavigateToAnalyzeCommand}"
                            Background="{Binding AnalyzeButtonBackground}"
                            BorderThickness="0"
                            CornerRadius="8"
                            Padding="15,12"
                            HorizontalContentAlignment="Left">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <TextBlock Text="📊" FontSize="16" VerticalAlignment="Center"/>
                            <TextBlock Text="Analyze" FontSize="14" Foreground="White" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <!-- Data Cluster Button -->
                    <Button Classes="nav-button"
                            Command="{Binding NavigateToDataClusterCommand}"
                            Background="{Binding DataClusterButtonBackground}"
                            BorderThickness="0"
                            CornerRadius="8"
                            Padding="15,12"
                            HorizontalContentAlignment="Left">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <TextBlock Text="📈" FontSize="16" VerticalAlignment="Center"/>
                            <TextBlock Text="Data Cluster" FontSize="14" Foreground="White" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <!-- Settings Button -->
                    <Button Classes="nav-button"
                            Command="{Binding NavigateToSettingsCommand}"
                            Background="{Binding SettingsButtonBackground}"
                            BorderThickness="0"
                            CornerRadius="8"
                            Padding="15,12"
                            HorizontalContentAlignment="Left">
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <TextBlock Text="⚙️" FontSize="16" VerticalAlignment="Center"/>
                            <TextBlock Text="Settings" FontSize="14" Foreground="White" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

                <!-- Footer -->
                <StackPanel VerticalAlignment="Bottom" Margin="0,50,0,20">
                    <TextBlock Text="Powered by MediaPipe" 
                               FontSize="10" 
                               Foreground="#666666" 
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="© 2025 MetaExtractor" 
                               FontSize="10" 
                               Foreground="#666666" 
                               HorizontalAlignment="Center"
                               Margin="0,5,0,0"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Column="1" Background="#1e1e1e">
            <!-- Header Bar -->
            <Border Background="#2d2d2d" 
                    Height="60" 
                    VerticalAlignment="Top"
                    CornerRadius="10,0,0,0"
                    Margin="10,10,10,0">
                <Grid ColumnDefinitions="*,Auto">
                    <StackPanel Grid.Column="0" 
                                Orientation="Horizontal" 
                                VerticalAlignment="Center" 
                                Margin="20,0">
                        <TextBlock Text="{Binding CurrentPageTitle}" 
                                   FontSize="20" 
                                   FontWeight="SemiBold" 
                                   Foreground="White" 
                                   VerticalAlignment="Center"/>
                        <TextBlock Text=" / " 
                                   FontSize="16" 
                                   Foreground="#888888" 
                                   VerticalAlignment="Center" 
                                   Margin="10,0"/>
                        <TextBlock Text="{Binding CurrentPageSubtitle}" 
                                   FontSize="14" 
                                   Foreground="#888888" 
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Column="1" 
                                Orientation="Horizontal" 
                                VerticalAlignment="Center" 
                                Margin="0,0,20,0">
                        <TextBlock Text="🌙" 
                                   FontSize="16" 
                                   Foreground="#888888" 
                                   VerticalAlignment="Center" 
                                   Margin="0,0,10,0"/>
                        <TextBlock Text="Dark Mode" 
                                   FontSize="12" 
                                   Foreground="#888888" 
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Page Content -->
            <ContentControl Content="{Binding CurrentPage}" 
                            Margin="10,80,10,10"/>
        </Grid>
    </Grid>

    <!-- Styles -->
    <Window.Styles>
        <Style Selector="Button.nav-button">
            <Setter Property="Background" Value="#333333"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Medium"/>
        </Style>
        
        <Style Selector="Button.nav-button:pointerover">
            <Setter Property="Background" Value="#404040"/>
        </Style>
        
        <Style Selector="Button.nav-button:pressed">
            <Setter Property="Background" Value="#505050"/>
        </Style>
    </Window.Styles>

</Window>
