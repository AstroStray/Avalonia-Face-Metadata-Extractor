<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="MetaExtractor.App.UI.Avalonia.App"
             xmlns:local="using:MetaExtractor.App.UI.Avalonia"
             xmlns:converters="using:MetaExtractor.App.UI.Avalonia.Converters"
             RequestedThemeVariant="Default">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>

    <Application.Resources>
        <converters:ByteArrayToBitmapConverter x:Key="ByteArrayToBitmapConverter"/>
    </Application.Resources>

    <Application.Styles>
        <FluentTheme />
    </Application.Styles>
</Application>
